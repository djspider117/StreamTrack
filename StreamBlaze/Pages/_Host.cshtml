@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace StreamBlaze.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    <script>
        window.SignalUpdate = (playlistItem) => {
            var artist = document.getElementById("artist");
            var track = document.getElementById("track");
            //var remix = document.getElementById("remix");

            var nowPlaying = document.getElementById("nowPlaying");

            nowPlaying.classList.add("nowPlayingAnimation");

            artist.classList.remove("titleAnim");
            artist.offsetWidth;
            artist.classList.add("titleAnim");

            track.classList.remove("trackAnim");
            track.offsetWidth;
            track.classList.add("trackAnim");

            setTimeout(() => {
                artist.innerHTML = playlistItem.artist;
                track.innerHTML = playlistItem.track;
                nowPlaying.classList.remove("nowPlayingAnimation");

            }, 1000);

        }
    </script>

</body>
</html>
